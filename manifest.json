{
    "manifest_version": 3,
    "name": "Rocket Math Automation",
    "version": "3.6.0",
    "description": "Automates Equivalent Fractions and Factors & Primes levels on Rocket Math",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://play.rocketmath.com/*",
        "https://admin.rocketmath.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.rocketmath.com/*"
            ],
            "js": [
                "fraction.min.js",
                "solvers/equivalent-fractions/solver.js",
                "solvers/factors-primes/solver.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "factors_100.json",
                "injected.js"
            ],
            "matches": [
                "https://play.rocketmath.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}